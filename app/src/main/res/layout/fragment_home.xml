<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/seafood"
            android:textAppearance="?attr/textAppearanceSearchResultTitle"
            android:fontFamily="@font/google_sans_bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerViewSeafood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_seafood"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/vegetarian"
            android:textAppearance="?attr/textAppearanceSearchResultTitle"
            android:fontFamily="@font/google_sans_bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerViewVegetarian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_vegetarian"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/dessert"
            android:textAppearance="?attr/textAppearanceSearchResultTitle"
            android:fontFamily="@font/google_sans_bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mRecyclerViewDessert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_dessert"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>